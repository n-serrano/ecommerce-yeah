<!DOCTYPE html>
<html>
  <head>
    <script
      src="https://kit.fontawesome.com/712575d4a5.js"
      crossorigin="anonymous"
    ></script>
    <title>Yeah!</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/stylex.css" />
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="shortcut icon" href="/images/logo-y-title.png" />
    <script src="../scripts/global.js"></script>
  </head>
  <body>
    
    <%- include('./partials/header') %>

    <div class="product-container">
      <% if(typeof product == "undefined") { %>
        <h2>No hay productos cargados aun</h2>
        <%} else  { %> 
      <%for (let i = 0; i < product.length; i++) { %>
        <div class="product" id="item1">
          <a href="/detail/<%= product[i].id %>" class="card">
          <img src="/uploads/products/<%= product[i].imgpath %>" alt="">
        <h2><%= product[i].name %></h2>
        <h3>$ <%= product[i].price %></h3>
        <p><%= product[i].description %></p>
      </a>
      </div>
      <%}%>
    <%}%>
     
    </div>

      <%- include('./partials/footer') %>
  
    </body>
</html>
